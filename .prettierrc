{
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 80,
  "tabWidth": 2,
  "semi": true,

  "overrides": [
    {
      "files": "tsconfig.json",
      "options": {
        "parser": "json"
      }
    }
  ],
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^path$",
    "^express$",
    "^dotenv$",
    "^morgan$",
    "^rotating-file-stream$",
    "^@controllers/(.*)$",
    "^@middleware/(.*)$",
    "^@models/(.*)$",
    "^@routes/(.*)$",
    "^@services/(.*)$",
    "^@utils/(.*)$",
    "^[./]"
  ],

  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
